package components

type HtmlProps struct {
	Title string
}

templ Html(title string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title }</title>
			<link rel="stylesheet" href="/public/style.css"/>
		</head>
		<body class="w-full flex flex-col gap-4">
			{ children... }
		</body>
	</html>
}
