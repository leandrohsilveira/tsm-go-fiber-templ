{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "go@latest",
    "gcc@latest",
    "nodejs@22"
  ],
  "env": {
    "GOPATH": "$PWD",
    "PATH": "$PATH:$PWD/bin"
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "nvim": [
        "nvim"
      ],
      "start": [
        "migrate -source=file://sql/migrations -database=postgres://app:password@localhost:5432/app?sslmode=disable up",
        "sqlc generate",
        "cd app",
        "go tool templ generate",
        "air"
      ],
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
